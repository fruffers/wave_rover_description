<?xml version="1.0"?>
<sdf version="1.9">
  <model name="wave_rover">
    <!-- Base Link -->
    <link name="base_link">
      <inertial>
        <mass>0.266</mass>
        <inertia>
          <ixx>0.000264</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.000264</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <visual name="base_visual">
        <pose>0 0 0.06 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/roverbody.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.15 0.15 0.15 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
      <collision name="base_collision">
        <pose>0 0 0.04 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1828 0.0753 0.0542</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Bracket Stand Link -->
    <link name="bracket_stand_link">
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-5</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1e-5</iyy>
          <iyz>0.0</iyz>
          <izz>1e-5</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <visual name="bracket_stand_visual">
        <geometry>
          <box>
            <size>0.045 0.11 0.04</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.15 0.15 0.15 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
    </link>

    <!-- Bracket Stand Joint -->
    <joint name="bracket_stand_mount" type="fixed">
      <parent>base_link</parent>
      <child>bracket_stand_link</child>
      <pose>0.0 0.0042 0.11 0 0 0</pose>
    </joint>

    <!-- Camera Bracket Link -->
    <link name="camera_bracket_link">
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>1e-6</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1e-6</iyy>
          <iyz>0.0</iyz>
          <izz>1e-6</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <visual name="camera_bracket_visual">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/realsense_bracket.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.15 0.15 0.15 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
    </link>

    <!-- Camera Bracket Joint -->
    <joint name="bracket_mount" type="fixed">
      <parent>bracket_stand_link</parent>
      <child>camera_bracket_link</child>
      <pose>0.0 -0.04 0.02 0 0 0</pose>
    </joint>

    <!-- Camera Link -->
    <link name="camera_link">
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>1e-4</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1e-4</iyy>
          <iyz>0.0</iyz>
          <izz>1e-4</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <visual name="camera_visual">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/d435.dae</uri>
            <scale>0.01 0.01 0.01</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
          <specular>0.3 0.3 0.3 1.0</specular>
        </material>
      </visual>
      <collision name="camera_collision">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/d435.dae</uri>
            <scale>0.01 0.01 0.01</scale>
          </mesh>
        </geometry>
      </collision>

      <!-- RealSense D435 Camera Sensor -->
      <sensor name="realsense_d435" type="rgbd_camera">
        <update_rate>30</update_rate>
        <camera name="camera">
          <horizontal_fov>1.0472</horizontal_fov>
          <lens>
            <intrinsics>
              <fx>554.25469</fx>
              <fy>554.25469</fy>
              <cx>320.5</cx>
              <cy>240.5</cy>
              <s>0</s>
            </intrinsics>
          </lens>
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
            <center>0.5 0.5</center>
          </distortion>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>300</far>
          </clip>
          <depth_camera>
            <clip>
              <near>0.1</near>
              <far>10</far>
            </clip>
          </depth_camera>
          <noise>
            <type>gaussian</type>
            <mean>0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
        <plugin filename="libgazebo_ros_camera.so" name="camera_driver">
          <ros>
            <namespace>camera</namespace>
            <remapping>image_raw:=image_raw</remapping>
            <remapping>camera_info:=camera_info</remapping>
            <remapping>depth/image_raw:=depth/image_raw</remapping>
            <remapping>depth/camera_info:=depth/camera_info</remapping>
            <remapping>points:=points</remapping>
          </ros>
          <camera_name>camera</camera_name>
          <frame_name>camera_link_optical</frame_name>
          <hack_baseline>0.07</hack_baseline>
          <min_depth>0.001</min_depth>
          <max_depth>300.0</max_depth>
        </plugin>
      </sensor>
    </link>

    <!-- Camera Mount Joint -->
    <joint name="camera_mount" type="fixed">
      <parent>camera_bracket_link</parent>
      <child>camera_link</child>
      <pose>0.0 -0.03 0.02 0.349 0 0</pose>
    </joint>

    <!-- Camera Optical Link -->
    <link name="camera_link_optical">
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-8</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1e-8</iyy>
          <iyz>0.0</iyz>
          <izz>1e-8</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
    </link>

    <!-- Camera Optical Joint -->
    <joint name="camera_optical_joint" type="fixed">
      <parent>camera_link</parent>
      <child>camera_link_optical</child>
      <pose>0 0 0 -1.5708 0 -1.5708</pose>
    </joint>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <inertial>
        <mass>0.451</mass>
        <inertia>
          <ixx>0.000395</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.000395</iyy>
          <iyz>0.0</iyz>
          <izz>0.000361</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <collision name="front_left_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.042</length>
            <radius>0.04</radius>
          </cylinder>
        </geometry>
      </collision>
      <visual name="front_left_wheel_visual">
        <pose>0 0 0 1.570795 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/leftside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
    </link>

    <!-- Front Left Wheel Joint -->
    <joint name="front_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_left_wheel</child>
      <pose>-0.061 -0.050 0.04 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <inertial>
        <mass>0.451</mass>
        <inertia>
          <ixx>0.000395</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.000395</iyy>
          <iyz>0.0</iyz>
          <izz>0.000361</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <collision name="front_right_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.042</length>
            <radius>0.04</radius>
          </cylinder>
        </geometry>
      </collision>
      <visual name="front_right_wheel_visual">
        <pose>0 0 0 1.570795 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/rightside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
    </link>

    <!-- Front Right Wheel Joint -->
    <joint name="front_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_right_wheel</child>
      <pose>0.061 -0.050 0.04 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Back Left Wheel -->
    <link name="back_left_wheel">
      <inertial>
        <mass>0.451</mass>
        <inertia>
          <ixx>0.000395</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.000395</iyy>
          <iyz>0.0</iyz>
          <izz>0.000361</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <collision name="back_left_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.042</length>
            <radius>0.04</radius>
          </cylinder>
        </geometry>
      </collision>
      <visual name="back_left_wheel_visual">
        <pose>0 0 0 1.570795 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/leftside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
    </link>

    <!-- Back Left Wheel Joint -->
    <joint name="back_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>back_left_wheel</child>
      <pose>-0.061 0.050 0.04 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Back Right Wheel -->
    <link name="back_right_wheel">
      <inertial>
        <mass>0.451</mass>
        <inertia>
          <ixx>0.000395</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.000395</iyy>
          <iyz>0.0</iyz>
          <izz>0.000361</izz>
        </inertia>
        <pose>0 0 0 0 0 0</pose>
      </inertial>
      <collision name="back_right_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.042</length>
            <radius>0.04</radius>
          </cylinder>
        </geometry>
      </collision>
      <visual name="back_right_wheel_visual">
        <pose>0 0 0 1.570795 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/rightside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
        </material>
      </visual>
    </link>

    <!-- Back Right Wheel Joint -->
    <joint name="back_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>back_right_wheel</child>
      <pose>0.061 0.050 0.04 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Differential Drive Plugin -->
    <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
      <left_joint>front_left_wheel_joint</left_joint>
      <left_joint>back_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <right_joint>back_right_wheel_joint</right_joint>
      <wheel_separation>0.1</wheel_separation>
      <wheel_radius>0.04</wheel_radius>
      <odom_publish_frequency>1</odom_publish_frequency>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <tf_topic>tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>

    <!-- Joint State Publisher Plugin -->
    <plugin filename="libignition-gazebo-joint-state-publisher-system.so" name="ignition::gazebo::systems::JointStatePublisher">
      <joint_name>front_left_wheel_joint</joint_name>
      <joint_name>front_right_wheel_joint</joint_name>
      <joint_name>back_left_wheel_joint</joint_name>
      <joint_name>back_right_wheel_joint</joint_name>
      <topic>joint_states</topic>
      <update_rate>50</update_rate>
    </plugin>

    <!-- Pose Publisher Plugin -->
    <plugin filename="libignition-gazebo-pose-publisher-system.so" name="ignition::gazebo::systems::PosePublisher">
      <publish_link_pose>true</publish_link_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <use_pose_vector_msg>true</use_pose_vector_msg>
      <static_publisher>true</static_publisher>
      <static_update_frequency>1</static_update_frequency>
    </plugin>

  </model>
</sdf>
