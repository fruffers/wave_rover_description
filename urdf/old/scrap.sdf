
<?xml version="1.0"?>
<sdf version="1.8">
  <model name="wave_rover">
    <static>false</static>
    
    <!-- Body dimensions (matching your original xacro properties) -->
    <pose>0 0 0.04 0 0 0</pose>
    
    <!-- Base Link -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/roverbody.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.15 0.15 0.15 1.0</ambient>
          <diffuse>0.15 0.15 0.15 1.0</diffuse>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.1828 0.0753 0.0542</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.2</mu>
              <mu2>0.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Bracket Stand Link -->
    <link name="bracket_stand_link">
      <pose>0 0.0042 0.07 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-5</ixx>
          <iyy>1e-5</iyy>
          <izz>1e-5</izz>
        </inertia>
      </inertial>
      <visual name="bracket_stand_visual">
        <geometry>
          <box>
            <size>0.045 0.11 0.04</size>
          </box>
        </geometry>
        <material>
          <ambient>0.15 0.15 0.15 1.0</ambient>
          <diffuse>0.15 0.15 0.15 1.0</diffuse>
        </material>
      </visual>
    </link>

    <!-- Camera Bracket Link -->
    <link name="camera_bracket_link">
      <pose>0 -0.0358 0.09 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>1e-6</ixx>
          <iyy>1e-6</iyy>
          <izz>1e-6</izz>
        </inertia>
      </inertial>
      <visual name="camera_bracket_visual">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/realsense_bracket.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.15 0.15 0.15 1.0</ambient>
          <diffuse>0.15 0.15 0.15 1.0</diffuse>
        </material>
      </visual>
    </link>

    <!-- Camera Link with RealSense D435 -->
    <link name="camera_link">
      <pose>0 -0.0658 0.11 0.349 0 0</pose>
      <inertial>
        <mass>0.0615752</mass>
        <inertia>
          <ixx>9.108e-05</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>2.51e-06</iyy>
          <iyz>0</iyz>
          <izz>8.931e-05</izz>
        </inertia>
      </inertial>
      
      <collision name="camera_collision">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/d435.dae</uri>
          </mesh>
        </geometry>
      </collision>
      
      <visual name="camera_visual">
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/d435.dae</uri>
            <submesh>
              <name>RealSense</name>
              <center>false</center>
            </submesh>
          </mesh>
        </geometry>
        <material>
          <diffuse>1.0 1.0 1.0</diffuse>
          <specular>1.0 1.0 1.0</specular>
          <pbr>
            <metal>
              <albedo_map>package://wave_rover_description/materials/textures/RealSense_Albedo.png</albedo_map>
              <normal_map>package://wave_rover_description/materials/textures/RealSense_Normal.png</normal_map>
              <metalness_map>package://wave_rover_description/materials/textures/RealSense_Metalness.png</metalness_map>
              <roughness_map>package://wave_rover_description/materials/textures/RealSense_Roughness.png</roughness_map>
            </metal>
          </pbr>
          <!-- fallback to script if no PBR support-->
          <script>
            <uri>package://wave_rover_description/materials/scripts/</uri>
            <uri>package://wave_rover_description/materials/textures/</uri>
            <name>UrbanTile/RealSense_Diffuse</name>
          </script>
        </material>
      </visual>
      
      <!-- RealSense D435 Camera Sensor -->
      <sensor name="realsense_d435" type="rgbd_camera">
        <pose>0 0 0 0 0 -1.5708</pose>
        <update_rate>60</update_rate>
        <camera name="camera">
          <horizontal_fov>1.0472</horizontal_fov>
          <lens>
            <intrinsics>
              <!-- fx = fy = width / ( 2 * tan (hfov / 2 ) ) -->
              <fx>554.25469</fx>
              <fy>554.25469</fy>
              <!-- cx = ( width + 1 ) / 2 -->
              <cx>320.5</cx>
              <!-- cy = ( height + 1 ) / 2 -->
              <cy>240.5</cy>
              <s>0</s>
            </intrinsics>
          </lens>
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
            <center>0.5 0.5</center>
          </distortion>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>300</far>
          </clip>
          <depth_camera>
            <clip>
              <near>0.1</near>
              <far>10</far>
            </clip>
          </depth_camera>
          <noise>
            <type>gaussian</type>
            <mean>0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
        <plugin name="camera_controller" filename="ignition-gazebo-sensors-system">
          <ignition_frame_id>camera_link_optical</ignition_frame_id>
          <ros>
            <namespace>/camera</namespace>
            <remapping>~/image:=image_raw</remapping>
            <remapping>~/depth_image:=depth/image_raw</remapping>
            <remapping>~/camera_info:=camera_info</remapping>
            <remapping>~/points:=depth/points</remapping>
          </ros>
        </plugin>
      </sensor>
    </link>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <pose>-0.061 -0.050 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-4</ixx>
          <iyy>1e-4</iyy>
          <izz>1e-4</izz>
        </inertia>
      </inertial>
      <visual name="front_left_wheel_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/leftside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
      <collision name="front_left_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.042</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.2</mu>
              <mu2>0.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <pose>0.061 -0.050 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-4</ixx>
          <iyy>1e-4</iyy>
          <izz>1e-4</izz>
        </inertia>
      </inertial>
      <visual name="front_right_wheel_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/rightside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
      <collision name="front_right_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.042</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.2</mu>
              <mu2>0.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Back Left Wheel -->
    <link name="back_left_wheel">
      <pose>-0.061 0.050 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-4</ixx>
          <iyy>1e-4</iyy>
          <izz>1e-4</izz>
        </inertia>
      </inertial>
      <visual name="back_left_wheel_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/leftside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
      <collision name="back_left_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.042</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.2</mu>
              <mu2>0.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Back Right Wheel -->
    <link name="back_right_wheel">
      <pose>0.061 0.050 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-4</ixx>
          <iyy>1e-4</iyy>
          <izz>1e-4</izz>
        </inertia>
      </inertial>
      <visual name="back_right_wheel_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://wave_rover_description/meshes/rightside_wheel.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
      <collision name="back_right_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.042</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.2</mu>
              <mu2>0.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Joints -->
    <joint name="bracket_stand_mount" type="fixed">
      <parent>base_link</parent>
      <child>bracket_stand_link</child>
    </joint>

    <joint name="bracket_mount" type="fixed">
      <parent>bracket_stand_link</parent>
      <child>camera_bracket_link</child>
    </joint>

    <joint name="camera_mount" type="fixed">
      <parent>camera_bracket_link</parent>
      <child>camera_link</child>
    </joint>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="back_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>back_left_wheel</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="back_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>back_right_wheel</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10.0</effort>
          <velocity>10.0</velocity>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Plugins -->
    <!-- Diff Drive Plugin for Gazebo Fortress -->
    <plugin name="ignition::gazebo::systems::DiffDrive" filename="ignition-gazebo-diff-drive-system">
      <ros>
        <namespace>wave_rover</namespace>
      </ros>
      <left_joint>front_left_wheel_joint</left_joint>
      <left_joint>back_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <right_joint>back_right_wheel_joint</right_joint>
      <wheel_separation>0.1173</wheel_separation>
      <wheel_radius>0.04</wheel_radius>
      <max_linear_acceleration>1.0</max_linear_acceleration>
      <max_angular_acceleration>2.0</max_angular_acceleration>
      <max_linear_velocity>0.5</max_linear_velocity>
      <max_angular_velocity>1.0</max_angular_velocity>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <odom_publisher_frequency>50</odom_publisher_frequency>
    </plugin>

    <!-- Joint State Publisher Plugin -->
    <plugin name="ignition::gazebo::systems::JointStatePublisher" filename="ignition-gazebo-joint-state-publisher-system">
      <ros>
        <namespace>wave_rover</namespace>
        <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>50</update_rate>
    </plugin>

    <!-- Pose Publisher Plugin -->
    <plugin name="ignition::gazebo::systems::PosePublisher" filename="ignition-gazebo-pose-publisher-system">
      <ros>
        <namespace>wave_rover</namespace>
        <remapping>~/out:=pose</remapping>
      </ros>
      <publish_link_pose>true</publish_link_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <use_pose_vector_msg>true</use_pose_vector_msg>
      <static_publisher>true</static_publisher>
      <static_update_frequency>1</static_update_frequency>
    </plugin>

  </model>
</sdf>
